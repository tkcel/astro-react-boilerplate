{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "baseUrl": "src",
    "paths": {
      "@/*": ["./*"],
    },
    "plugins": [
      {
        "name": "@astrojs/ts-plugin",
      },
    ],
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.astro"],
}
