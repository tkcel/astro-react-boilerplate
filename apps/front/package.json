{
  "name": "lp",
  "type": "module",
  "version": "0.0.1",
  "license": "UNLICENSED",
  "scripts": {
    "clean": "rimraf ./dist",
    "dev": "APP_ENV=dev astro dev --host",
    "start": "APP_ENV=dev astro dev --host",
    "build:dev": "yarn clean && astro check && APP_ENV=dev astro build",
    "build:stg": "yarn clean && astro check && APP_ENV=stg astro build",
    "build:pro": "yarn clean && astro check && APP_ENV=pro astro build",
    "preview": "astro preview",
    "astro": "astro",
    "test:jest": "jest",
    "test:e2e:debug": "cypress open",
    "test:e2e:run": "cypress run",
    "fix": "yarn -s format && yarn -s lint:fix",
    "format": "prettier --write 'src/**/*.{js,jsx,ts,tsx,astro}'",
    "lint": "yarn -s lint:es && yarn -s lint:style",
    "lint:fix": "yarn -s lint:es:fix && yarn -s lint:style:fix",
    "lint:es": "eslint 'src/**/*.{js,jsx,ts,tsx,astro}'",
    "lint:es:fix": "eslint --fix 'src/**/*.{js,jsx,ts,tsx,astro}'",
    "lint:style": "stylelint 'src/**/*.{css,less,sass,scss}'",
    "lint:style:fix": "stylelint --fix 'src/**/*.{css,less,sass,scss}'",
    "lint:conflict": "eslint-config-prettier 'src/**/*.{js,jsx,ts,tsx}'",
    "generate:template": "node scripts/generate-template/src/index.cjs",
    "precommit": "lint-staged"
  },
  "dependencies": {
    "@astrojs/check": "^0.3.1",
    "@astrojs/node": "^8.2.5",
    "@astrojs/react": "^3.0.7",
    "@astrojs/ts-plugin": "^1.5.2",
    "@sentry/astro": "^7.112.2",
    "@types/react": "^18.0.21",
    "@types/react-dom": "^18.0.6",
    "astro": "^4.0.3",
    "classnames": "^2.3.2",
    "dayjs": "^1.11.10",
    "dotenv": "^16.4.1",
    "emoji-regex": "^10.3.0",
    "lodash.debounce": "^4.0.8",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "sanitize.css": "^13.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@astrojs/sitemap": "^3.1.6",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/jest": "^29.5.11",
    "@types/lodash.debounce": "^4.0.9",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "astro-robots-txt": "^1.0.0",
    "cypress": "^13.6.1",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-astro": "^0.30.0",
    "eslint-plugin-cypress": "^2.15.1",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jest-dom": "^5.1.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-testing-library": "^6.2.0",
    "eslint-plugin-unused-imports": "^3.0.0",
    "husky": "^8.0.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.2.0",
    "path-to-regexp": "^6.2.2",
    "postcss-html": "^1.5.0",
    "prettier": "^3.1.1",
    "prettier-plugin-astro": "^0.12.2",
    "sass": "^1.69.5",
    "stylelint": "^15.11.0",
    "stylelint-config-recess-order": "^4.4.0",
    "stylelint-config-standard-scss": "^11.1.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "5.1.6"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run precommit"
    }
  }
}
